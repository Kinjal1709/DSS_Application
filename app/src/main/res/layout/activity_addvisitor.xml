<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AddvisitorActivity">
    <TextView
        android:id="@+id/tv_v_add"
        android:text="Add Visitor"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/ed_v_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:inputType="text"
        android:background="@drawable/shapeemail"
        android:drawableTint="@color/black"
        android:hint="Visitor Name"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textColorHighlight="@color/white"/>
    <EditText
        android:id="@+id/ed_v_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:inputType="number"
        android:maxLength="10"
        android:background="@drawable/shapeemail"
        android:drawableTint="@color/black"
        android:hint="Visitor Contact"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textColorHighlight="@color/white"/>
    <EditText
        android:id="@+id/ed_v_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:inputType="number"
        android:background="@drawable/shapeemail"
        android:drawableTint="@color/black"
        android:hint="Visitor Member"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textColorHighlight="@color/white"/>
    <EditText
        android:id="@+id/ed_v_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:inputType="text"
        android:background="@drawable/shapeemail"
        android:drawableTint="@color/black"
        android:hint="Vehicle Type(e.g. Two Or Four)"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textColorHighlight="@color/white"/>
    <EditText
        android:id="@+id/ed_v_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:inputType="datetime"
        android:background="@drawable/shapeemail"
        android:drawableTint="@color/black"
        android:hint="Visitor Date and Time"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textColorHighlight="@color/white"/>
    <Button
        android:id="@+id/bt_addvisitor"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Add Visitor"
        android:layout_below="@+id/tv_gname"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        app:backgroundTint="@color/signupColor"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shapelogin"/>

</LinearLayout>